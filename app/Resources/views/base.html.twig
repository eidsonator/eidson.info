    </head>
    <body>
        {% include 'templates/menu.html.twig' %}

        <div class="container" style="margin-top: 15px;">
            <div class="row">
                {% block main_row %}
                    {% block column %}
                    <div class="col-sm-9">
                        {% block body %}{% endblock %}
                    </div>
                    {% endblock %}
                    <div class="col-sm-3">
                        {% include ':templates:sidebar.html.twig' %}
                    </div>
                {% endblock main_row %}
            </div>

        </div>
    </body>

    <script src="{{ asset('build/app.js') }}"></script>
    <script src="{{ asset('bundles/app/vendor/highlightjs/highlight.pack.js') }}"></script>
    <script>hljs.initHighlightingOnLoad();</script>

    {% include 'templates/google_analytics.html.twig' %}

    {% block javascripts %}{% endblock %}
</html>
